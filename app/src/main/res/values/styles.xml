<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Splash" parent="AppCompat.FullScreen">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>
    <!--AppCompat FullScreen-->
    <style name="AppCompat.FullScreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="style_tv_flow">
        <item name="android:background">@color/grass_green_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_btn_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_btn_main_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tv_weight_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:textColor">#ff697387</item>
        <item name="android:textSize">9dp</item>
    </style>

    <style name="tv_style_weight_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:textColor">#ff697387</item>
        <item name="android:textSize">9dp</item>
    </style>

    <style name="tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">5</item>
        <item name="android:textColor">#373D52</item>
        <item name="android:textSize">13dp</item>
        <item name="android:visibility">visible</item>
    </style>

</resources>
