<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.demo.activity.view.ViewDemoActivity">

    <Button
        android:id="@+id/btn_weight_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layerlist"
        android:text="体重曲线" />

    <Button
        android:id="@+id/btn_finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layerlist"
        android:text="手指轨迹" />

    <Button
        android:id="@+id/btn_wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layerlist"
        android:text="水波纹" />

    <Button
        android:id="@+id/btn_color_matrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="色彩矩阵" />

    <Button
        android:id="@+id/btn_eraser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="橡皮擦" />

    <Button
        android:id="@+id/btn_bitmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bitmap 自定义canvas" />
    <Button
        android:id="@+id/btn_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="qq拖拽效果的红点" />



</LinearLayout>
